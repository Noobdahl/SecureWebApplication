<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureWebApplication</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a class="navbar-brand" href="/Landing">SecureWebApplication</a>
                }
                else
                {
                    <a class="navbar-brand" href="/">SecureWebApplication</a>
                }
                @* <a class="navbar-brand" href="/">SecureWebApplication</a> *@
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @* <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li> *@
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/AdminPage">Admin Page</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" href="/Logout">Logout</a>
                            </li>
                        }
                        @* else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Index">Login</a>
                            </li>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2025 SecureWebApplication</span>
        </div>
    </footer>
</body>
</html>
